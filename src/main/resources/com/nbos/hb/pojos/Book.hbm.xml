<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.nbos.hb.pojos.Book" table="BOOK">
		<id name="bid" column="BOOK_ID" type="int">
			<generator class="assigned"></generator>
		</id>
		<property name="bname" column="BNAME" type="string" not-null="true"></property>
		<property name="isRemoved" column="REMOVED" type="boolean"
			not-null="true"></property>
		<property name="isbn" column="ISBN" type="long" not-null="true"></property>
	</class>
</hibernate-mapping>
